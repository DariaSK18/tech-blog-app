<%- include('components/head') -%>
<body>
  <div class="wrapper">
    <%- include('components/header') -%>
    <div class="main">
      <div class="main__container">
        <div class="main__cards-block">
          <div class="main__cards">
            <ul class="blogs-list">
              <% blogs.forEach(blog => { %>
              <li id="<%= blog._id %>">
                <h4><%= blog.title %></h4>
                <p class="main__content"><%= blog.content %></p>
                <% blog.tags.forEach(tag => { %>
                <a href="#" class="main__tags">#<%= tag %> </a>
                <% }) %>
                <!-- <p><%= blog.createdAt %></p> -->
                <% if (user && blog.author?._id && String(blog.author._id) ===
                String(user._id)) { %>
                <div class="main_btns">
                  <button class="editBlog card-btn">Edit</button>
                  <button class="deleteBlog card-btn">Delete</button>
                </div>
                <% } %>
              </li>
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
